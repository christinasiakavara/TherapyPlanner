CREATE TABLE User (
    UserID INT PRIMARY KEY NOT NULL,
    FirstName VARCHAR(15),
    Surname VARCHAR(30),
    UserName VARCHAR(10) NOT NULL,
    Password VARCHAR(20) NOT NULL,
    Email VARCHAR(30) NOT NULL,
    Phone INT NOT NULL,
    Address VARCHAR(50),
    BirthDate DATE,
    Role INT,
    CONSTRAINT CHK_Role CHECK (Role=1 OR Role=2)
);